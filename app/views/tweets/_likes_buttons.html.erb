<% if tweet.likes.find_by(user_id: current_user.id)%>
    <% current_like = tweet.likes.find_by(user_id: current_user.id)%>
  <%= link_to icon("fas", "heart"), tweet_like_path(tweet_id: tweet.id, id: current_like.id), method: :delete, remote: true %>
<% else %>
  <%= link_to icon("far", "heart"), tweet_likes_path(tweet_id: tweet.id), method: :post, remote: true %>
<% end %>