<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3 mr-5">
      <%= image_tag @user.image, class: "img-fluid rounded mx-auto" %>
      <h5><%= @user.name %></h5>
      <h5>@<%= @user.username %></h5>
      <div><%= simple_format @user.bio %></div>
    </div>

    <div class="col-md-6 mt-3">
      <%= form_for [@tweet] do |f| %>
      <div class="form-group">
      <%= f.text_area :post, class: 'form-control', rows: 4, placeholder: "What's happening?", maxlength: 140, id: 'textbox' %>
       <div align="right"><span id="chars">140</span> characters remaining</div>
      </div>
      <div class="form-group">
        <%= f.submit "Post", class: 'btn btn-primary btn-block' %>
      </div>
      <% end %>
      
      <h3>Tweet</h3>
      <% @user_tweet.each do |tweet| %>
      <div class="card">
        <div class="card-body">
          <small><b><%= @user.name %></b> <i>@<%= @user.username %></i> Created <%= distance_of_time_in_words(tweet.created_at, Time.now)%> ago</small>
          <p><%= tweet.post %></p>
          <p><%= icon("fas", "heart") %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



