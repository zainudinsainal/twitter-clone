<div class="container d-flex justify-content-center tweet-table">
  <div class="row">
    <div class="col-md-12">
      <%= form_for [@tweet] do |f| %>
      <%= f.label :post, "Tweet" %>
      <%= f.text_field :post %>

      <%= f.submit %>
      <% end %>
      <h1>Tweet</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Tweet</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
          <tr>
            <th scope="row"><%= tweet.id %></th>
            <td><%= tweet.post %></td>
            <td>
              <%= link_to 'Show', tweet_path(tweet) %>
              <%= link_to 'Edit', edit_tweet_path(tweet) %>
              <%= link_to 'Delete', tweet_path(tweet), method: :delete, data: {confirm:"Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>