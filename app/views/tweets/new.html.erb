<% if @tweet.errors.any? %>
    <h2>We have some errors here!</h2>
    <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for [@tweet] do |f| %>
    <%= f.label :tweet, "Tweet" %>
    <%= f.text_field :tweet %>

    <%= f.submit %>
<% end %>