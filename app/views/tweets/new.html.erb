<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item d-flex justify-content-end">
        <%= link_to('log out', destroy_user_session_path, method: :delete) %> |
      </li>
    </ul>
  </div>
  <div class="card-body d-flex align-items-start flex-row">
    <img class="card-img-top align-items-stretch" src="https://cdn.dribbble.com/users/199982/screenshots/4044699/furkan-avatar-dribbble_1x.png" alt="Card image cap" style="width: 10rem">
    <h5 class="card-title p-2"><%= @user.username %></h5>
    <p class="card-text p-2"><%= @user.name %></p>
    <p class="card-text p-2"><%= @user.bio %></p>
  </div>
</div>
<div class="card d-flex justify-content-center" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <div class="container new-tweet">
        <% if @tweet.errors.any? %>
            <h2>We have some errors here!</h2>
            <ul>
                <% @tweet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>

        <%= form_for [@tweet] do |f| %>
            <%= f.label :tweet, "Tweet" %>
            <%= f.text_field :tweet %>

            <%= f.submit %>
        <% end %>
    </div>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Cras justo odio</li>
    <li class="list-group-item">Dapibus ac facilisis in</li>
    <li class="list-group-item">Vestibulum at eros</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>