<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
      <div class="card">
        <div class="card-body">
          <%= image_tag @user.image, class: "img-fluid rounded mx-auto" %>
          <h5><%= @user.name.capitalize %></h5>
          <h7 class="text-colour">@<%= @user.username %></h7>
          <div>Joined <%= @user.created_at.strftime("%B %Y") %></div>
          <% if @user.tweets.count <= 1 %>
            <div><%= @user.tweets.count %> tweet</div>
          <% else %>
            <div><%= @user.tweets.count %> tweets</div>
          <% end %>
          <br>
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <% @tags.each do |tag| %>
            <p><%= link_to tag.content, tag_path(tag) %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <% @tag.tweets.each do |tweet| %>
        <div class="card">
          <div class="card-body">
            <small><b><%= tweet.user.name %></b> <i>@<%= tweet.user.username %></i> Created <%= distance_of_time_in_words(tweet.created_at, Time.now)%> ago</small>
            <p><%= tweet.post %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 mt-3">
      <div class="card">
        <div class="card-body">
          <p>Your 10 Followers</p>
          <% @user_followers.each do |follower| %></p>
            <p><b><%= follower.name %></b> <i>@<%= link_to follower.username, user_path(follower) %></i></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>