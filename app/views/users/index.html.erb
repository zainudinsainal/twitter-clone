<div class="container mt-3">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
    <% @users.each do |user| %>
      <div class="card">
        <div class="card-body">
          <small><b><%= user.name %></b> <i>@<%= link_to user.username, user_path(user) %></i></small>
          <p>Latest Tweet: <%= user.tweets.last.try(:post) %></p>
              <p><strong><%= Relationship.where(follower_id: user.id).count %></strong> following <strong><%= Relationship.where(following_id: user.id).count %></strong> followers</p>
          <p><%= render partial: 'follow_form', locals: {user: user} %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>