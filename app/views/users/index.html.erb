<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
    <% @users.each do |user| %>
      <div class="card">
        <div class="card-body">
          <small><b><%= user.name %></b> <i>@<%= link_to user.username, user_path(user) %></i></small>
          <p>Latest Tweet: <%= user.tweets.last.try(:post) %></p>
          <p><%= link_to 'Follow', user_path(current_user) %></p>
        </div>
      </div>
      <% end %>
      
      
    </div>
  </div>
</div>